@prefix crm:   <http://www.cidoc-crm.org/cidoc-crm/> .
@prefix rdf: <http://www.w3.org/1999/02/22-rdf-syntax-ns#> .
@prefix rdfs: <http://www.w3.org/2000/01/rdf-schema#> .
@prefix sh: <http://www.w3.org/ns/shacl#> .
@prefix xsd: <http://www.w3.org/2001/XMLSchema#> .
@prefix ex: <http://example.com/ns#> .
@prefix skkg:  <https://ontology.skkg.ch/> .
@prefix skos:  <http://www.w3.org/2004/02/skos/core#> .
@prefix xsd:   <http://www.w3.org/2001/XMLSchema#> .

skkg:EntityShape a sh:NodeShape ;
    sh:targetClass crm:E1_CRM_Entity ;
    sh:or (
        [ 
            sh:path rdfs:label ;
            sh:minCount 1;
        ]
        [ 
            sh:path skos:prefLabel ;
            sh:minCount 1;
        ]
        [ 
            sh:path crm:P190_has_symbolic_content ;
            sh:minCount 1;
        ]
        [
            sh:path crm:P90_has_value ;
            sh:minCount 1;
        ]
    ) .

skkg:TimespanShape a sh:NodeShape ;
    sh:targetClass crm:E52_Time-Span ;
    sh:or (
        [ sh:path crm:P82a_begin_of_the_begin ]
        [ sh:path crm:P82b_end_of_the_end ]
        [ sh:path crm:P82_at_some_time_within ]
    ) ;

    sh:property [
        sh:path crm:P82a_begin_of_the_begin ;
        sh:maxCount 1 ;
        sh:pattern "\\d{2,7}" 
    ] .

skkg:ProvenanceShape a sh:NodeShape ;
    sh:targetClass skkg:Provenance ;
    sh:property [
        sh:path crm:P9_consists_of ;
        sh:qualifiedValueShape [ sh:class crm:E7_Activity ] ;
        sh:qualifiedMinCount 1 ;
    ] .